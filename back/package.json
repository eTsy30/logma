{
  "name": "back",
  "version": "0.0.1",
  "private": true,
 "scripts": {
  "build": "tsc -p tsconfig.build.json",
  "start": "node dist/src/main.js",
  "start:dev": "nest start --watch",
  "migrate:local": "export LOCAL_DATABASE_URL=$(grep LOCAL_DATABASE_URL .env.local | cut -d '=' -f2) && npx prisma migrate dev --name init",
  "migrate:neon": "export NEON_DATABASE_URL=$(grep NEON_DATABASE_URL .env.prod | cut -d '=' -f2) && npx prisma migrate dev --name init",
  "generate": "npx prisma generate"
},
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "pg": "^8.18.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.7",
    "prisma": "^7.3.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  }
}
