{
  "name": "back",
  "version": "0.0.1",
  "private": true,
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/src/main.js",
    "dev": "nest start --watch",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "db:reset": "NODE_ENV=local prisma migrate reset",
    "migrate:local": "export LOCAL_DATABASE_URL=$(grep LOCAL_DATABASE_URL .env.local | cut -d '=' -f2) && npx prisma migrate dev --name init",
    "migrate:neon": "export NEON_DATABASE_URL=$(grep NEON_DATABASE_URL .env.prod | cut -d '=' -f2) && npx prisma migrate dev --name init",
    "generate": "npx prisma generate",
    "prebuild": "prisma generate",
    "prepare": "husky",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.6",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "compression": "^1.8.1",
    "cors": "^2.8.6",
    "helmet": "^8.1.0",
    "pg": "^8.18.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.7",
    "prisma": "^7.3.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.54.0"
  }
}
